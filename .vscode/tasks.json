{
    "tasks": [
        {
            "label": "clean",
            "command": "dotnet clean",
            "type": "shell",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "dependsOn": "clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean release",
            "command": "dotnet clean --configuration Release",
            "type": "shell",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet publish --configuration Release",
            "type": "shell",
            "dependsOn": "clean release",
            "problemMatcher": "$msCompile"
        },
        {
            "type": "func",
            "command": "host start",
            "problemMatcher": "$func-watch",
            "isBackground": true,
            "dependsOn": "npm install"
        },
        {
            "type": "shell",
            "label": "npm install",
            "command": "npm install"
        },
        {
            "type": "shell",
            "label": "npm prune",
            "command": "npm prune --production",
            "problemMatcher": []
        }
    ]
}